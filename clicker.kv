<MainScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            id:score_lbl
            text: "0"
        FloatLayout:
            Image:
                id: click
                size_hint: 0.5, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                source: "click.png"
            Button:
                size_hint: 0.5, 1
                background_color: 1, 0, 0, 0
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                on_press: root.click()
                on_release: root.unclick()

        FloatLayout:
            Image:

                size_hint: 0.75, 1.25
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                source: "shop.png"

            Button:

                size_hint: 0.75, 1.25
                background_color: 1, 0, 0, 0
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                on_press: root.on_shop_screen()





<MenuScreen>
    BoxLayout:
        orientation: "vertical"
        Image:
            size_hint: 0.25, 0.5
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            source: "mainscreen.png"
        FloatLayout:
            Image:
                id: start
                size_hint: 0.25, 0.5
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                source: "start.png"

            Button:

                size_hint: 0.25, 0.5
                background_color: 1, 0, 0, 0
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                on_press: root.on_main_screen()
        FloatLayout:
            Image:
                id: sett
                size_hint: 0.25, 0.5
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                source: "settings.png"

            Button:

                size_hint: 0.25, 0.5
                background_color: 1, 0, 0, 0
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                on_press: root.on_main_screen()


<ShopScreen>:
    FloatLayout:
        Image:
            source: 'wood.jpg'
            allow_stretch: True
            keep_ratio: False
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                orientation: "horizontal"
                size_hint: 1, 0.2
                Button:
                    text: "Назад"
                    size_hint: 0.5, 1
                    background_color: 1, 0, 0, 0.5
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    on_press: root.on_main_screen()

                Label:
                    id: money
                    text: "0"
            ScrollView:
                size_hint_y: None
                size_hint: 1, 1
                GridLayout:
                    id: shopItems
                    size_hint_y: None
                    height: self.minimum_height
                    cols: 1
                    row_default_height: 100
                    FloatLayout:
                        Button:
                            background_color: 0, 0, 0, 0.5
                            size_hint: 1, 1
                            pos_hint: {'center_x': 0.5, 'center_y':0.5}

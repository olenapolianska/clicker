<MainScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            id:score_lbl
            text: "0"
        FloatLayout:
            Image:
                id: ball
                size_hint: 0.5, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                source: "ball.jpg"
            Button:
                size_hint: 0.5, 1
                background_color: 1, 0, 0, 0
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                on_press: root.click()
                on_release: root.unclick()
        Button:
            text: "123"

<SecondScreen>
    BoxLayout:
        orientation: "vertical"
        Label:
            text:"Введіть "



<MenuScreen>
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Меню"
        FloatLayout:
           Image:
               id: ball
               size_hint: 0.5, 1
               pos_hint: {"center_x": 0.5, "center_y": 0.5}
               source: "ball.jpg"
        Button:
            text: "Запустити гру"
            size_hint: 0.5, 1
            background_color: 1, 0, 0, 0
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press: root.on_main_screen()
        Button:
            text: "1"
        Button:
            text: "2"
        Button:
            text: "Налаштування профілю"


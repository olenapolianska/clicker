<MainScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            id:score_lbl
            text: "0"
        FloatLayout:
            Image:
                id: click
                size_hint: 0.5, 1
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                source: "click.png"
            Button:
                size_hint: 0.5, 1
                background_color: 1, 0, 0, 0
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                on_press: root.click()
                on_release: root.unclick()
        Button:
            text: "123"

<SecondScreen>
    BoxLayout:
        orientation: "vertical"
        Label:
            text:"Введіть "



<MenuScreen>
    BoxLayout:
        orientation: "vertical"
        Image:
            size_hint: 0.25, 0.5
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            source: "mainscreen.png"
        FloatLayout:
            Image:
                id: start
                size_hint: 0.25, 0.5
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                source: "start.png"

            Button:

                size_hint: 0.5, 1
                background_color: 1, 0, 0, 0
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                on_press: root.on_main_screen()
        FloatLayout:
            Image:
                id: sett
                size_hint: 0.25, 0.5
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                source: "settings.png"

            Button:

                size_hint: 0.5, 1
                background_color: 1, 0, 0, 0
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                on_press: root.on_main_screen()
